<Window x:Class="GhostLink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GhostLink" Height="500" Width="800"
        Background="#1E1E1E"
        FontFamily="Consolas"
        Foreground="#E0E0E0">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Peers -->
        <Grid Grid.Column="0" Margin="0 0 10 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Peers Online:" FontWeight="Bold"
                       FontSize="14" Foreground="#00FFFF"
                       Margin="5" Grid.Row="0"/>

            <ListBox x:Name="PeerListBox" Grid.Row="1" Margin="5"
                     Background="#2D2D30" BorderBrush="#3A3A3A" />

            <Button Content="Search for Peers" Grid.Row="2"
                    Margin="5" Padding="5"
                    Background="#007ACC" Foreground="White"
                    BorderBrush="#007ACC"/>
        </Grid>

        <!-- RIGHT PANEL: Chat -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Connection Settings -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="IpTextBox" Width="160" Text="127.0.0.1"
                         Background="#2D2D30" Foreground="White"
                         BorderBrush="#3A3A3A" Margin="0 0 10 0"/>
                <TextBox x:Name="PortTextBox" Width="70" Text="5000"
                         Background="#2D2D30" Foreground="White"
                         BorderBrush="#3A3A3A" Margin="0 0 10 0"/>
                <Button Content="Connect" Width="80"
                        Background="#007ACC" Foreground="White"
                        BorderBrush="#007ACC"
                        Click="Connect_Click"/>
            </StackPanel>

            <!-- Chat History -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
                <StackPanel x:Name="ChatPanel" Margin="0 0 0 10"/>
            </ScrollViewer>

            <!-- Message Input -->
            <Grid Grid.Row="2" Margin="0 5 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputBox" Height="30"
                         Margin="0 0 10 0"
                         Background="#2D2D30" Foreground="White"
                         BorderBrush="#3A3A3A"
                         Grid.Column="0"/>
                <Button Content="Send" Width="80" Grid.Column="1"
                        Background="#0E639C" Foreground="White"
                        BorderBrush="#0E639C"
                        Click="Send_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
