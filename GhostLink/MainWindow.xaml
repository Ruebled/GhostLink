<Window x:Class="GhostLink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GhostLink" Height="600" Width="900"
        Background="#1E1E1E"
        FontFamily="Consolas"
        Foreground="#E0E0E0">

    <DockPanel>
        <!-- STATUS BAR -->
        <StatusBar DockPanel.Dock="Bottom" Background="#2D2D30" Foreground="LightGray">
            <TextBlock x:Name="StatusText" Text="GhostLink ready." Padding="5"/>
        </StatusBar>

        <!-- MAIN GRID -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Peers and Info -->
            <Grid Grid.Column="0" Margin="0 0 10 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Peers Online:" FontWeight="Bold"
                           FontSize="14" Foreground="#00FFFF"
                           Margin="5" Grid.Row="0"/>

                <ListBox x:Name="PeerListBox" Grid.Row="1" Margin="5"
                         Background="#2D2D30" BorderBrush="#3A3A3A" />

                <!-- Selected Peer Info -->
                <StackPanel Grid.Row="2" Margin="5" Background="#2D2D30">
                    <TextBlock Text="Selected Peer:" FontWeight="Bold" Margin="0 0 0 5"/>
                    <TextBlock x:Name="SelectedPeerText" Text="(none)"/>
                    <Button Content="Start Chat" Margin="0 5 0 0"
                            Background="#007ACC" Foreground="White"
                            Click="StartChatWithSelectedPeer"/>
                </StackPanel>

                <!-- Discovery -->
                <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5">
                    <TextBox x:Name="DiscoveryPortBox" Text="5001" Width="60"
                             Background="#2D2D30" Foreground="White"
                             BorderBrush="#3A3A3A" Margin="0 0 5 0"/>
                    <Button Content="Search Peers"
                            Background="#007ACC" Foreground="White"
                            BorderBrush="#007ACC"
                            Click="BroadcastDiscovery_Click"/>
                </StackPanel>
            </Grid>

            <!-- RIGHT PANEL: Chat -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Info: Username, Timestamp Toggle -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBox x:Name="UsernameTextBox" Width="120" Text="Anon"
                             Background="#2D2D30" Foreground="White"
                             BorderBrush="#3A3A3A" Margin="0 10 0 0"/>
                    <TextBlock Text="(your name)" VerticalAlignment="Center" Foreground="Gray" Margin="5 0 20 0"/>
                    <CheckBox x:Name="TimestampToggle" Content="Show timestamps" IsChecked="True"
                              Foreground="White" Margin="0 0 20 0"/>
                    <Button Content="Self-Test" Background="#3A3A3A" Foreground="White" Click="SendTestMessageToSelf"/>
                </StackPanel>

                <!-- Connection Settings -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Grid.Row="1">
                    <TextBox x:Name="IpTextBox" Width="160" Text="127.0.0.1"
                             Background="#2D2D30" Foreground="White"
                             BorderBrush="#3A3A3A" Margin="0 0 10 0"/>
                    <TextBox x:Name="PortTextBox" Width="70" Text="5000"
                             Background="#2D2D30" Foreground="White"
                             BorderBrush="#3A3A3A" Margin="0 0 10 0"/>
                    <Button Content="Connect" Width="80"
                            Background="#007ACC" Foreground="White"
                            BorderBrush="#007ACC"
                            Click="Connect_Click"/>
                    <TextBlock x:Name="ChatWithLabel" Text="Chatting with: (none)"
                               Foreground="#00CED1" FontSize="13" Margin="15 0 0 0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Chat History -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
                    <StackPanel x:Name="ChatPanel" Margin="0 0 0 10"/>
                </ScrollViewer>

                <!-- Message Input -->
                <Grid Grid.Row="3" Margin="0 5 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="InputBox" Height="30"
                             Margin="0 0 10 0"
                             Background="#2D2D30" Foreground="White"
                             BorderBrush="#3A3A3A"
                             Grid.Column="0"/>
                    <Button Content="Send" Width="80" Grid.Column="1"
                            Background="#0E639C" Foreground="White"
                            BorderBrush="#0E639C"
                            Click="Send_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
